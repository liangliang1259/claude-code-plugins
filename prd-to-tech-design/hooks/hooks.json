{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/validate_output.sh",
            "description": "Validate output before writing technical design document"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|tech-design-*.md",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/post_process.sh",
            "description": "Post-process generated technical design document"
          }
        ]
      }
    ]
  }
}
